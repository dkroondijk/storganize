<% if @item.errors.any? %>
  $('.add-item-form').html("<%= j render partial: "/items/form", locals: {box: @box} %>")
<% else %>
  $('#box-items-<%= @item.box.id %>').append("<%= j render partial: "/items/item_list", locals: {item: @item, box: @box} %>");

  <% @item = @box.items.new %>
  $('#add-item-form-<%= @item.box.id %>').html("<%= j render partial: '/items/form', locals: {box: @box} %>")
<% end %>